<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="io.github.controlwear.controller">
    <compatible-screens>
        <!-- all small size screens -->
        <screen android:screenSize="small" android:screenDensity="ldpi" />
        <screen android:screenSize="small" android:screenDensity="mdpi" />
        <screen android:screenSize="small" android:screenDensity="hdpi" />
        <screen android:screenSize="small" android:screenDensity="xhdpi" />
        <!-- all normal size screens -->
        <screen android:screenSize="normal" android:screenDensity="ldpi" />
        <screen android:screenSize="normal" android:screenDensity="mdpi" />
        <screen android:screenSize="normal" android:screenDensity="hdpi" />
        <screen android:screenSize="normal" android:screenDensity="xhdpi" />
    </compatible-screens>

    <application
        android:resizeableActivity="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="io.github.controlwear.controller.SplashActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.github.controlwear.controller.MainActivity"
            android:screenOrientation="landscape"
            android:maxAspectRatio="2.4">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.github.controlwear.controller.MenuActivity"
            android:screenOrientation="landscape"
            android:maxAspectRatio="2.4" />
        <activity
            android:name="io.github.controlwear.controller.app_settings"
            android:screenOrientation="landscape"
            android:maxAspectRatio="2.4"/>
        <activity
            android:name="io.github.controlwear.controller.drone_settings"
            android:screenOrientation="landscape"
            android:maxAspectRatio="2.4"/>
        <activity
            android:name="io.github.controlwear.controller.Profile"
            android:screenOrientation="landscape"
            android:maxAspectRatio="2.4"/>
        <activity
            android:name="io.github.controlwear.controller.Update_Firmware"
            android:screenOrientation="landscape"
            android:maxAspectRatio="2.4"/>
        <activity
            android:name=".help"
            android:screenOrientation="landscape"
            android:maxAspectRatio="2.4"/>
        <activity
            android:name="io.github.controlwear.controller.Contact_us"
            android:screenOrientation="landscape"
            android:maxAspectRatio="2.4"/>
        <activity
            android:name="io.github.controlwear.controller.faq"
            android:screenOrientation="landscape"
            android:maxAspectRatio="2.4"/>
        <activity
            android:name="io.github.controlwear.controller.Tutorials"
            android:screenOrientation="landscape"
            android:maxAspectRatio="2.4"/>

        <meta-data
            android:name="android.max_aspect" android:value="2.4"
            />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_SETTING" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

</manifest>